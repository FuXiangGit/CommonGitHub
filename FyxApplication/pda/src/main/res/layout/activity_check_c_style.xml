<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/generic_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_absrb_card"
        android:paddingRight="10dip"
        android:paddingLeft="10dip"
        android:orientation="horizontal">

        <com.xvli.widget.TextMarquee
            android:id="@+id/left_text3"
            style="@style/comm_blue_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="left"
            android:layout_weight="3"
            android:ellipsize="marquee"
            android:focusable="true"
            android:layout_gravity="left|center_vertical"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_marginLeft="5dp"/>

        <EditText
            android:id="@+id/et_other3"
            style="@style/check_right_text"
            android:layout_width="@dimen/list_item_heignt"
            android:layout_weight="6"
            android:layout_height="38dip"
            android:padding="8dip" />
        <Button
            android:id="@+id/btn_take3"
            android:layout_width="@dimen/delete_size"
            android:layout_height="@dimen/delete_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/photograph_selector"
            android:padding="20dip"
            android:visibility="gone"/>
    </LinearLayout>
    <EditText
        android:id="@+id/et_other3_muil"
        style="@style/check_right_text"
        android:textCursorDrawable="@drawable/color_cursor"
        android:visibility="gone" />

    <!--<include layout="@layout/comm_divider" />-->
</LinearLayout>