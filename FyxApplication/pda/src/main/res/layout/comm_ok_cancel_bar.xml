<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@color/generic_white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_layout_title"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="49dip">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="@dimen/back"
            android:layout_height="@dimen/back"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="@string/back_netcatchmodel"
            android:textColor="@color/subject_text"
            android:drawableTop="@mipmap/btn_back"
            android:textSize="@dimen/common_tip_size" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:drawableTop="@drawable/btn_ok"
            android:text="@string/btn_title_ok"
            android:gravity="center"
            android:padding="4dip"
            android:textColor="@color/subject_text"
            android:textSize="@dimen/common_tip_size"  />

        <TextView
            android:id="@+id/tv_title"
            style="@style/generic_add_title"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:textSize="@dimen/size4"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/text_hint" />
</LinearLayout>