<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg2"
    android:orientation="vertical" >

    <include
        android:id="@+id/topbar_dd_atmoperate"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        layout="@layout/comm_ok_cancel_bar" />

    <TextView
        android:id="@+id/tv_title_activity"
        style="@style/generic_add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="@string/atm_repair_tip" />

    <ListView
        android:id="@+id/repair_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_activity"
        android:layout_marginTop="@dimen/left"
        android:layout_marginBottom="10dip"
        android:descendantFocusability="afterDescendants"
        android:divider="@color/generic_transparent"
        android:dividerHeight="@dimen/view_height"/>

</LinearLayout>