<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_choose_dialog"
              android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dip"
        android:layout_marginBottom="10dip"
        android:gravity="center"
        android:textColor="@color/generic_blue"
        android:textSize="@dimen/list_item"
        android:text="@string/down_load_tip_head"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_hint"
        android:layout_marginTop="@dimen/top4"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/top4"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:gravity="center"
                android:text="@string/abb_key_transfer"
                android:textColor="@color/generic_black"
                android:textSize="@dimen/list_item" />

            <EditText
                android:id="@+id/et_log_numb"
                android:layout_width="130dip"
                android:layout_height="@dimen/list_item_heignt"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:singleLine="true"
                android:background="@drawable/bg_edittext_normal"
                android:textColor="@color/generic_black"
                android:textSize="@dimen/list_item"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dip"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:gravity="center"
                android:text="@string/add_key_rec"
                android:textColor="@color/generic_black"
                android:textSize="@dimen/list_item" />

            <EditText
                android:id="@+id/et_log_pwd"
                android:layout_width="130dip"
                android:layout_height="@dimen/list_item_heignt"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:singleLine="true"

                android:background="@drawable/bg_edittext_normal"
                android:textColor="@color/generic_black"
                android:textSize="@dimen/list_item" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_hint"
        android:layout_marginTop="@dimen/top4"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:gravity="center"

        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_but_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/line"
            android:layout_gravity="center_horizontal"
            android:background="@null"

            android:gravity="center"
            android:text="@string/btn_title_ok"
            android:textColor="@color/login_color"
            android:textSize="@dimen/list_item"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/line"
            android:background="@color/text_hint"/>

        <Button
            android:id="@+id/dialog_but_cancle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/line"
            android:layout_gravity="center_horizontal"

            android:background="@null"
            android:gravity="center"
            android:text="@string/btn_cancle"
            android:textColor="@color/login_color"
            android:textSize="@dimen/list_item"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>