<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_choose_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dip"
        android:gravity="center"
        android:text="@string/tip_select_content"
        android:textColor="@color/subject_text"
        android:textSize="@dimen/dialog_textsize_eighteen" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_view_height"
        android:layout_marginTop="@dimen/btn_maring_layout"
        android:background="@color/text_hint"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/box_belo_atm"
            android:textColor="@color/generic_blue"
            android:textSize="@dimen/dialog_textsize_eighteen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_heignt"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="@dimen/dialog_textsize_twenty"
            android:paddingLeft="2dip"
            >

            <Spinner
                android:id="@+id/atm_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dip"
                android:background="@drawable/edit_text_bg"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/subject_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/btn_maring_layout"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_but_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/add_absrb_card"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/btn_title_ok"
            android:textColor="@color/subject_text"
            android:textSize="@dimen/list_item" />
        <View
            android:layout_width="@dimen/dialog_view_height"
            android:layout_height="@dimen/tab_height"
            android:background="@color/text_hint"/>
        <Button
            android:id="@+id/dialog_but_cancle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/add_absrb_card"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/btn_cancle"
            android:textColor="@color/subject_text"
            android:textSize="@dimen/list_item" />
    </LinearLayout>
</LinearLayout>