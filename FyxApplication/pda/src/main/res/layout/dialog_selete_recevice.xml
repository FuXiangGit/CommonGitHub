<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/bg_choose_dialog"
              android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_head"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:layout_marginBottom="@dimen/sheet_spacing"
        android:gravity="center"
        android:text="@string/dialog_multi_check"
        android:textColor="@color/generic_blue"
        android:textSize="@dimen/list_item" />
    <View
        android:layout_width="match_parent"

        android:layout_height="@dimen/dialog_view_height"
        android:background="@color/text_hint"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/sheet_spacing"
        android:orientation="horizontal">




    <Button
        android:id="@+id/dialog_text_tip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_heignt"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:background="@drawable/btn_one_two"
        android:text="@string/surrender"
        android:textColor="@color/subject_text"
        android:textSize="@dimen/list_item" />

        <Button
            android:id="@+id/dialog_text_tip1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_heignt"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="@string/incept"
            android:background="@drawable/btn_one_two"
            android:textColor="@color/subject_text"
            android:textSize="@dimen/list_item" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_view_height"
        android:layout_marginTop="@dimen/sheet_spacing"
        android:background="@color/text_hint"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >



        <Button
            android:id="@+id/dialog_but_cancle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/add_absrb_card"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/btn_cancle"
            android:textColor="@color/subject_text"
            android:textSize="@dimen/list_item" />
    </LinearLayout>

</LinearLayout>
