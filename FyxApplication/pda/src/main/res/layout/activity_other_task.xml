<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/bg"
              android:orientation="vertical">

    <include layout="@layout/comm_ok_cancel_bar"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/left"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@color/generic_white"
                android:orientation="horizontal"
                android:paddingEnd="10dip"
                android:paddingStart="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/other_task_address"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/list_item"/>

                <TextView
                    android:id="@+id/tv_other_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/list_item"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@color/generic_white"
                android:orientation="horizontal"
                android:paddingEnd="10dip"
                android:paddingStart="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/tv_other_destination"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/comm_item_text_size"/>

                <TextView
                    android:id="@+id/tv_other_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/comm_item_text_size"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_height"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/generic_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="40dip"
                    android:text="@string/text_task_context"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/list_item"/>

                <TextView
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:minLines="2"
                    android:gravity="right|center"
                    android:paddingLeft="10dip"
                    android:textColor="@color/text_gray"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/comm_item_text_size"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_height"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/generic_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="40dip"
                    android:text="@string/text_handle_result"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/list_item"/>

                <EditText
                    android:id="@+id/et_results"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_height"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edit_text_bg"
                    android:paddingLeft="10dip"
                    android:textColor="@color/text_gray"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/comm_item_text_size"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_height"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/generic_white"
                android:layout_height="50dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dip"
                    android:text="@string/text_arrival_time"
                    android:singleLine="true"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/comm_item_text_size"/>

                <TextView
                    android:id="@+id/tv_arrivaltime"
                    android:layout_width="180dip"
                    android:layout_height="@dimen/comm_item_heignt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/text_gray"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/comm_item_text_size"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_height"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/generic_white"
                android:layout_height="50dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dip"
                    android:text="@string/text_leave_time"
                    android:singleLine="true"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/comm_item_text_size"/>

                <TextView
                    android:id="@+id/tv_leavetime"
                    android:layout_width="180dip"
                    android:layout_height="@dimen/comm_item_heignt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/text_gray"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/comm_item_text_size"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>