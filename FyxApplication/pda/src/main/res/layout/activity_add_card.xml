<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg2">

    <include
        android:id="@+id/topbar_dd_atmoperate"
        layout="@layout/comm_ok_cancel_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt_add_atmoperate_done"
        android:layout_below="@id/topbar_dd_atmoperate"
        android:layout_marginTop="@dimen/left"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_repair"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/add_atmcheck_repair"
            android:background="@drawable/list_item_selector2"
            android:clickable="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip">

            <TextView
                style="@style/generic_listview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/add_repair_title" />

            <CheckBox
                android:id="@+id/check_repair"
                style="@style/comm_checkbox"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:checked="false" />
        </RelativeLayout>

        <View
            android:id="@+id/v_line_card"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_height" />

        <RelativeLayout
            android:id="@+id/rl_absorb"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/add_atmcheck_repair"
            android:background="@drawable/list_item_selector2"
            android:clickable="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip">

            <TextView
                style="@style/generic_listview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/add_atmtoolcheck_absorb" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:background="@drawable/comm_arrow_selector" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_absorb_1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/add_atmcheck_repair"
            android:background="@drawable/list_item_selector2"
            android:clickable="true"
            android:paddingLeft="10dip"
            android:visibility="gone"
            android:paddingRight="10dip">

            <TextView
                style="@style/generic_listview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/is_has_absorb" />

            <CheckBox
                android:id="@+id/check_card"
                style="@style/comm_checkbox"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:checked="false" />
        </RelativeLayout>

        <View
            android:id="@+id/line_2"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_height" />

        <RelativeLayout
            android:id="@+id/rl_wedge"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/add_atmcheck_repair"
            android:background="@drawable/list_item_selector2"
            android:clickable="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip">

            <TextView
                style="@style/generic_listview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/add_atmtoolcheck_wedge" />

            <ImageView
                android:id="@+id/iv_wedge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/comm_arrow_selector" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line3"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_height" />

        <RelativeLayout
            android:id="@+id/rl_waste"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/add_atmcheck_repair"
            android:background="@drawable/list_item_selector2"
            android:clickable="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip">

            <TextView
                style="@style/generic_listview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/add_atmtoolcheck_waste" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/comm_arrow_selector" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
