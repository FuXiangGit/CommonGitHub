<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_choose_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="16dip"
        android:gravity="center"
        android:text="@string/add_receive"
        android:textColor="@color/generic_blue"
        android:textSize="@dimen/list_item" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/top4"
        android:background="@color/text_hint" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/user1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:button="@drawable/radiobutton_absorb_selector"

                android:textSize="@dimen/list_item"
                android:visibility="gone" />

            <TextView
                android:id="@+id/user1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="aaaa"
                android:textColor="#000000"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="3dip">

            <RadioButton
                android:id="@+id/user2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_absorb_selector"
                android:textSize="@dimen/list_item"

                android:visibility="gone"

                />

            <TextView
                android:id="@+id/user2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="aaaa"
                android:textColor="#000000"
                android:visibility="gone" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="3dip">

            <RadioButton
                android:id="@+id/user3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_absorb_selector"
                android:textSize="@dimen/list_item"

                android:visibility="gone"

                />

            <TextView
                android:id="@+id/user3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="aaaa"
                android:textColor="#000000"
                android:visibility="gone" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/top4"
            android:background="@color/text_hint" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:gravity="center"

            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_but_ok"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/line"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"

                android:background="@null"
                android:gravity="center"
                android:text="@string/btn_title_ok"
                android:textColor="@color/login_color"
                android:textSize="@dimen/list_item" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="@dimen/line"
                android:background="@color/text_hint" />

            <Button
                android:id="@+id/dialog_but_cancle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/line"
                android:layout_gravity="center_horizontal"

                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/btn_cancle"
                android:textColor="@color/login_color"
                android:textSize="@dimen/list_item" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>