<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_choose_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dip"
        android:gravity="center"
        android:textColor="@color/generic_red"
        android:text="@string/input_card_error"
        android:textSize="20dip" />
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dialog_textsize_twenty"
        android:layout_height="@dimen/dialog_view_height"
        android:background="@color/text_hint"/>

    <EditText
        android:id="@+id/tv_tip"
        android:layout_width="220dip"
        android:layout_height="@dimen/list_item_heignt"
        android:background="@drawable/edit_text_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center"
        android:layout_marginTop="@dimen/dialog_textsize_twenty"
        android:inputType="number"
        android:maxLength="4"
        android:textColorHint="@color/text_hint"
        android:hint="@string/input_card_copy"
        android:singleLine="true"
        android:numeric="integer"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/list_item" />
    <EditText
        android:id="@+id/input_card_ok"
        android:layout_width="220dip"
        android:layout_height="@dimen/list_item_heignt"
        android:background="@drawable/edit_text_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="4"
        android:hint="@string/input_card_ok"
        android:textColorHint="@color/text_hint"
        android:singleLine="true"
        android:numeric="integer"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/list_item" />
    <TextView
        android:id="@+id/tv_scan_code"
        android:layout_width="220dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:singleLine="true"
        android:visibility="gone"
        android:textColor="@color/generic_black"
        android:textSize="@dimen/list_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_view_height"
        android:layout_marginTop="@dimen/sheet_spacing"
        android:background="@color/text_hint"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/add_absrb_card"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/btn_title_ok"
            android:textColor="@color/subject_text"
            android:textSize="@dimen/list_item" />
        <View
            android:layout_width="@dimen/dialog_view_height"
            android:layout_height="@dimen/tab_height"
            android:background="@color/text_hint"/>
        <Button
            android:id="@+id/bt_cancle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/add_absrb_card"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/btn_cancle"
            android:textColor="@color/subject_text"
            android:textSize="@dimen/list_item" />
    </LinearLayout>

</LinearLayout>