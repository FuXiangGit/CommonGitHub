<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_photo_preview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/img_photo_preview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_photo_upload"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#f3f3f3" >

        <TextView
            android:id="@+id/txt_photo_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dip"
            android:padding="5dip"
            android:text="@string/btn_cancle"
            android:textColor="@color/generic_black"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/txt_photo_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dip"
            android:padding="5dip"
            android:text="@string/btn_title_ok"
            android:textColor="#168de2"
            android:textSize="18dip" />
    </RelativeLayout>

</LinearLayout>