<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg2"
                android:orientation="vertical">

    <include
        android:id="@+id/topbar_add_bincar"
        layout="@layout/comm_ok_cancel_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"/>


    <RadioGroup
        android:id="@+id/rg_misssion"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_heignt"
        android:layout_below="@id/topbar_add_bincar"
        android:background="@color/generic_white"
        android:orientation="horizontal">


            <RadioButton
                android:id="@+id/bt_user1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/maring_layout"
                android:singleLine="true"
                android:checked="true"
                android:background="@drawable/radiobutton_selector"
                android:textColor="@color/radio_tv_selector"
                android:textSize="@dimen/list_item"  />


            <RadioButton
                android:id="@+id/bt_user2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/maring_layout"
                android:singleLine="true"
                android:background="@drawable/radiobutton_selector"
                android:textColor="@color/radio_tv_selector"
                android:textSize="@dimen/list_item" />


            <RadioButton
                android:id="@+id/bt_user3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/maring_layout"
                android:background="@drawable/radiobutton_selector"
                android:textColor="@color/radio_tv_selector"
                android:singleLine="true"
                android:textSize="@dimen/list_item" />


            <RadioButton
                android:id="@+id/bt_user4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/maring_layout"
                android:singleLine="true"
                android:background="@drawable/radiobutton_selector"
                android:textColor="@color/radio_tv_selector"
                android:text="@string/add_truck_info"
                android:textSize="@dimen/list_item"  />

    </RadioGroup>
    <FrameLayout
        android:layout_below="@id/rg_misssion"
        android:id="@+id/frame_userinfo"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </FrameLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rg_misssion"
        android:layout_marginTop="@dimen/tv_margin"
        tools:context="com.xvli.fragment.MainTaskFragment">


        <RelativeLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/comm_item_heignt"
                    android:background="@color/generic_listview_item_bg"
                    android:paddingEnd="10dip"
                    android:paddingStart="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="@string/add_log_tv_addname"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/comm_item_heignt"
                    android:background="@color/generic_listview_item_bg"
                    android:paddingEnd="10dip"
                    android:paddingStart="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="@string/add_login_edt_tip1"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height" />

                <RelativeLayout
                    android:id="@+id/ll_adddepart"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/comm_item_heignt"
                    android:background="@color/generic_listview_item_bg"
                    android:paddingEnd="10dip"
                    android:paddingStart="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="@string/add_log_tv_adddepartment"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />

                    <TextView
                        android:id="@+id/tv_adddepartment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_adddepart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/comm_item_heignt"
                    android:background="@color/generic_listview_item_bg"
                    android:paddingEnd="10dip"
                    android:paddingStart="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="@string/add_log_tv_addlogintime"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />

                    <TextView
                        android:id="@+id/tv_addlogintime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_main"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dip"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dip"
                    android:layout_marginRight="25dip">


                    <Button
                        android:id="@+id/btn_login_user"
                        android:layout_width="@dimen/small_btn"
                        android:layout_height="@dimen/top3"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:background="@drawable/bt_long_sure"
                        android:text="@string/add_login_user"
                        android:textSize="@dimen/list_item" />

                    <Button
                        android:id="@+id/btn_login_reduce"
                        android:layout_width="@dimen/small_btn"
                        android:layout_height="@dimen/top3"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:background="@drawable/bt_long_sure"
                        android:text="@string/add_login_reduce"
                        android:textSize="@dimen/list_item" />

                    <Button
                        android:id="@+id/add_login_change"
                        android:layout_width="@dimen/small_btn"
                        android:layout_height="@dimen/top3"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bt_long_sure"
                        android:gravity="center"
                        android:text="@string/add_login_change"
                        android:textSize="@dimen/list_item" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/big_btn_heignt"
                    android:layout_marginLeft="@dimen/image_w"
                    android:layout_marginRight="@dimen/image_w"
                    android:layout_marginTop="10dip">

                    <Button
                        android:id="@+id/btn_login_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:background="@drawable/bt_long_selector"
                        android:text="@string/add_login_out"
                        android:textSize="@dimen/list_item" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/car_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/ll_truck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/comm_item_heignt"
                    android:background="@color/generic_listview_item_bg"
                    android:paddingEnd="10dip"
                    android:paddingStart="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="@string/truck_code"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />

                    <TextView
                        android:id="@+id/tv_truck_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height" />

                <RelativeLayout
                    android:id="@+id/ll_platenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/comm_item_heignt"
                    android:background="@color/generic_listview_item_bg"
                    android:paddingEnd="10dip"
                    android:paddingStart="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="@string/add_log_truck_platenumber"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />

                    <TextView
                        android:id="@+id/tv_truck_platenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_platenumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/comm_item_heignt"
                    android:background="@color/generic_listview_item_bg"
                    android:paddingEnd="10dip"
                    android:paddingStart="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="@string/add_log_truck_state"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />

                    <TextView
                        android:id="@+id/tv_truck_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height" />

                <RelativeLayout
                    android:id="@+id/ll_depart"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/comm_item_heignt"
                    android:background="@color/generic_listview_item_bg"
                    android:paddingEnd="10dip"
                    android:paddingStart="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="@string/add_log_truck_departmentid"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />

                    <TextView
                        android:id="@+id/tv_truck_departmentid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/list_item" />
                </RelativeLayout>
            </LinearLayout>


            <Button
                android:layout_marginTop="@dimen/activity_btn_common"
                android:id="@+id/btn_truck_unbding"
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_btn_heignt"
                android:layout_marginLeft="@dimen/image_w"
                android:layout_marginRight="@dimen/image_w"
                android:layout_below="@+id/ll_truck"
                style="@style/btn_maring_layout"
                android:background="@drawable/bt_long_selector"
                android:text="@string/add_truck_unbding"
                android:textSize="@dimen/list_item" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
