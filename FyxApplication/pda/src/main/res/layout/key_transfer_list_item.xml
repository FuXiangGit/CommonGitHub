<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@color/generic_listview_item_bg"
              android:paddingLeft="10dip"
              android:paddingRight="10dip" >
    <TextView
        android:id="@+id/tv_item_code"
        android:layout_width="0dip"
        android:layout_height="@dimen/comm_item_heignt"
        android:layout_weight="3"
        android:gravity="center"

        style="@style/generic_listview_item"/>

    <TextView
        android:id="@+id/tv_item_status"
        android:layout_width="0dip"
        android:layout_height="@dimen/comm_item_heignt"
        android:layout_weight="2"
        android:gravity="center"
        style="@style/generic_listview_item"
        />
    <Button
        android:id="@+id/tv_item_delete"
        android:layout_width="0dip"
        android:layout_height="@dimen/comm_item_heignt"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="@dimen/comm_item_text_size"
        android:text="@string/delete_key"
        android:textColor="@color/red"
        android:background="@color/LDialogs_transparent"
        style="@style/generic_listview_item"
       />

</LinearLayout>
