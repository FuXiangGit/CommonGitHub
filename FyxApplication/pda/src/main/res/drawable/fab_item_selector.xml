<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
        <gradient android:angle="270" android:endColor="#110000FF" android:startColor="#110000FF" />

        <!--  <stroke android:width="1dip" android:color="@color/alertdialog_line" /> -->

        <corners android:radius="5dp" />

        <!-- <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" /> -->
    </shape></item>
    <item android:state_focused="true"><shape>
        <gradient android:angle="270" android:endColor="#ffccb7" android:startColor="#ffccb7" />

        <stroke android:width="1dip" android:color="#f403c9" />

        <corners android:radius="5dp" />

        <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
    </shape></item>
    <item><shape>
        <gradient android:angle="270" android:endColor="#00000000" android:startColor="#00000005" />

        <corners android:radius="2dp" />

        <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
    </shape></item>

</selector>