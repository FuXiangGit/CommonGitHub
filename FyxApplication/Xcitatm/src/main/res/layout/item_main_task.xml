<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/generic_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip">


    <TextView
        android:id="@+id/tv_branchname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:ellipsize="end"
        android:padding="3dip"
        android:textColor="@color/black_color_1"
        android:textSize="@dimen/size4"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_customname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="3dip"
        android:textColor="@color/black_color"
        android:textSize="@dimen/list_item" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tasktype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="3dip"
            android:textColor="@color/black_color"
            android:textSize="@dimen/list_item" />

        <TextView
            android:id="@+id/dispatch_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_toLeftOf="@+id/task_state"
            android:padding="3dip"
            android:layout_marginRight="10dip"
            android:textColor="@color/black_color"
            android:textSize="@dimen/list_item" />

        <TextView
            android:id="@+id/task_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:padding="3dip"
            android:textColor="@color/black_color"
            android:textSize="@dimen/list_item" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="3dip"
        android:textColor="@color/black_color"
        android:textSize="@dimen/list_item" />


</LinearLayout>